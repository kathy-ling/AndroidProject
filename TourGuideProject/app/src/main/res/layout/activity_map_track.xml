<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_track"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tian.tourguideproject.com.example.SlidingMenuActivity.MapTrackActivity">

    <include
        layout="@layout/custom_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <LinearLayout
        android:id="@+id/ll_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--添加百度地图控件-->
        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="date"
                android:layout_weight="2"
                android:text="请选择日期"
                android:textColor="#33ccff"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btnTrackSearching"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="查看轨迹"
                android:clickable="true"
                />

        </LinearLayout>>

    </LinearLayout>>

</LinearLayout>
