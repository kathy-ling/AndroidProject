<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/gray_border_white_in">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="导游基本信息"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名："/>
                        <TextView
                            android:id="@+id/guide_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年龄："/>
                        <TextView
                            android:id="@+id/guide_age_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别："/>
                        <TextView
                            android:id="@+id/guide_sex_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                    </TableRow>
                <!--</TableLayout>-->
                <!--<TableLayout-->
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="导游级别："/>
                        <TextView
                            android:id="@+id/guide_level_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="导游证号："/>
                        <TextView
                            android:id="@+id/guide_certificateID_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作年限："/>
                        <TextView
                            android:id="@+id/guide_work_age_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人介绍："/>
                        <TextView
                            android:id="@+id/guide_intro_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="70dp"
                            android:layout_marginRight="70dp"
                            android:text="你说什么？再说一遍，麻烦你了，我刚没听见"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPaleGray"
                android:layout_marginRight="10dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="语种："/>
                        <TextView
                            android:id="@+id/guide_language_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中文"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格："/>
                        <TextView
                            android:id="@+id/guide_price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300"/>
                    </TableRow>
                </TableLayout>
                <Button
                    android:id="@+id/guide_reserve_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="立即预定"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/colorOrange"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>